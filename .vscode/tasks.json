{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start ClampingPlateManager Dev Server",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      },
      "options": {
        "cwd": "${workspaceFolder}/ClampingPlateManager"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Build ClampingPlateManager",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build"],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/ClampingPlateManager"
      }
    }
  ]
}
